<%= form_for @session, :html => { :class => "form-horizontal session" } do |f| %>

  <% if @session.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:time) %>
  </div>
  <div class="form-group">
    <%= f.label :place, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :place, :class => 'form-control' %>
    </div>
    <%=f.error_span(:place) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :detail, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :detail, :class => 'form-control' %>
    </div>
    <%=f.error_span(:detail) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :short_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :short_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:short_title) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sessions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
